@{
    ViewBag.Title = "BanksDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 1;
}
<div class="grid">
    <div class="grid__row">
        <div class="grid__col-2">
            <div class="sub-nav">
                <h2 class="sub-nav__title">Question</h2>
                <div id="listQuestion">
                </div>
            </div>
        </div>
        <div class="grid__col-10">
            <div class="nav-content__wrapper">
                <div class="nav-content__header">
                    <div class="breadcrumb">
                        @Html.ActionLink("Subjects", "Index", "Home", null, new { @class = "breadcrumb-link" })
                        <span class="breadcrumb-separate"> > </span>
                        <span class="breadcrumb-detail">@ViewBag.nameSubject</span>
                    </div>
                    <div class="nav-content__action">
                    </div>
                </div>
                <div class="practice__container" id="practiceForm">
                    @foreach (var q in ViewBag.listQues as IEnumerable<Quizz.Models.EF.Question>)
                    {
                        <div class="practice__ques ques@(count)">
                            <div style="display: flex;flex-direction: column;overflow-y:auto">
                                <div class="test__ques">
                                    <div style="display: flex;align-items: center;" id="1">
                                        <h1 class="practice__content-title">Question @(count++) : </h1>
                                        <span class="practice__content-question">@q.content</span>
                                    </div>
                                    <ul class="practice__answer-list">
                                        <li class="practice__answer"> <span class="practice-subject__answer-content">A. @q.A</span></li>
                                        <li class="practice__answer"><span class="practice-subject__answer-content">B. @q.B</span></li>
                                        <li class="practice__answer"><span class="practice-subject__answer-content">C. @q.C</span></li>
                                        <li class="practice__answer"><span class="practice-subject__answer-content">D. @q.D</span></li>
                                    </ul>
                                    <div id="answerBlock" style="display: none;font-size: 1.8rem;color: green">Correct answer is: @q.answer</div>
                                </div>
                            </div>
                            <div class="test__ques_action" id="viewResut">
                                <button class="btn btn__second" style="cursor: pointer; width: 200px; margin: 0 20px" onClick="showResult('@count')">View result</button>
                                @*<button class="btn btn__second" style="cursor: pointer; width: 200px; margin: 0 20px" onClick="nextTestQues(@(count),'@q.SoundId')">Next</button>*@
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<Script src="~/Scripts/renderQuestion.js"></Script>
<Script src="~/Scripts/renderTest.js"></Script>

